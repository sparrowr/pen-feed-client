{{#each pens as |pen|}}
<div>
  <h1 data-id="{{pen._id}}" class="my-pen"> {{pen.name}}</h1>
  <ul data-id="{{pen._id}}">
    <li>{{pen.cleaningMessage}}</li>
    <li>Days since last update: {{pen.daysSinceUpdate}}</li>
    {{#if pen.inkType}}
      <li>Ink Type: {{pen.inkType}}</li>
    {{/if}}
    {{#if pen.inkName}}
      <li>Ink Name: {{pen.inkName}}</li>
    {{/if}}
  <small>Pen ID:{{pen._id}}</small>
  <br>
    <input type="button" class="btn classic" data-id="{{pen._id}}" data-toggle="modal" data-target="#updateModal{{pen._id}}" name="Update" value="Update">

    <!--Begin Update Modal -->
    <div class="modal" id="updateModal{{pen._id}}"  tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Update Pen</h4>
          </div>
        <div class="modal-body" data-id="{{pen._id}}">
          <form class="update-pen" data-id="{{pen._id}}">
            <p>Name: <input type="text" name="pen[name]" placeholder={{pen.name}}></p>
            <br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inkedCheckBox{{pen._id}}" name="pen[isInked]">
                <label class="form-check-label" for="inkedCheckBox{{pen._id}}">Inked</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="cleanedCheckBox{{pen._id}}" name="pen[isClean]">
                <label class="form-check-label" for="cleanedCheckBox{{pen._id}}">Cleaned</label>
              </div>
            <input type="text" name="pen[inkName]" placeholder="Ink Name">
            <label for="changedOnSelector{{pen._id}}">Pen inked or cleaned on:</label>
            <input type="date" id="changedOnSelector{{pen._id}}" name="pen[changedOn]" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
            <br>
            <label for="inkTypeSelector{{pen._id}}">Ink type:</label>
              <select multiple class="form-control" id="inkTypeSelector{{pen._id}}" name="pen[inkType]">
                <!-- value="pen[inkType]" -->
                <option>Empty</option>
                <option>Water-Soluble</option>
                <option>Bulletproof</option>
                <option>Waterproof</option>
                <option>Shimmer</option>
              </select>
            <input type="submit" data-id="{{pen._id}}" name="submit" value="Update Pen">
          </form>
        </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
<!--End of Update Modal   -->
    <button type="button" class="btn classic destroy-id" data-id="{{pen._id}}" name="Remove">Remove</button>
</ul>
</div>
<hr>
{{/each}}
